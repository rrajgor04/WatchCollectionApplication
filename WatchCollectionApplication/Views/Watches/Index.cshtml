@model WatchCollectionApplication.Models.WatchTypeViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Watches" asp-action="Index" method="get">
    <p>
        <select asp-for="WatchType" asp-items="Model.Types">
            <option value="">All</option>
        </select>

        Brand Name: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Watches[0].BrandName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Watches[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Watches[0].WatchMaterial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Watches[0].TypeOfWatch)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Watches[0].Quality)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Watches[0].Durability)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Watches[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Watches[0].Rating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Watches)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BrandName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WatchMaterial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypeOfWatch)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quality)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Durability)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
